{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "dist",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"typeRoots": ["./node_modules/@types", "./src/@types/*.d.ts"]
	},
	"include": ["src/**/*"]
}