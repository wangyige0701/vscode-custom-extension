{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "warn",
        "complexity": ["error", 15]
    },
    "overrides": [{
        "files": ["*.ts"],
        "rules": {
            "@typescript-eslint/semi": "warn",
            "@typescript-eslint/naming-convention": "off",
            "no-throw-literal": "off",
            "complexity": ["error", 15]
        }
    }],
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts",
        "test"
    ]
}
